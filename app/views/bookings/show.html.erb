<div class="container-listing">
  <br>
  <div class="flash flash-success alert-dismissible fade show">
    <span><strong>  <h2><strong>Awesome! You booked your studio! </strong></h2></span>
    <a data-dismiss="alert" aria-label="Close">
      <i class="fas fa-times"></i>
    </a>
  </div>

  <div class="card-trip">
    <img src="https://cantusstudio.com/wp-content/uploads/studio2.jpg" />
    <div class="card-trip-infos">
      <div>
        <h4><strong>Your studio rental...</strong></h4>
        <p><strong>Arrive at: <%= @booking.time_in %></strong> | <strong>until: <%= @booking.time_out %></strong></p>
        <p>Address: <%= @booking.studio.address %> <%= @booking.studio.city %>, <%= @booking.studio.zipcode %>, <%= @booking.studio.country %></p>
      </div>
      <h2 class="card-trip-pricing"><%= @booking.studio.price %>â‚¬</h2>
      <img src="" class="card-trip-user avatar-bordered" />
    </div>
  </div>

  <%# if policy(Booking).destroy? %>
    <p><%#= link_to "Delete my booking", booking, method: delete, data: { confirm: "Are you sure?"}%></p>
  <%# end %>


