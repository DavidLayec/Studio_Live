
<%= simple_form_for(@studio) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <body class="splash">
      <div class="login-box">
        <h2>Add Your Studio</h2>
          <form>
            <div class="user-box">
              <%= f.input :title %>
            </div>
            <div class="user-box">
               <%= f.input :address, id: "studio_address"%>
            </div>
            <div class="user-box">
              <%= f.input :description %>
            </div>
            <div class="user-box">
              <%= f.input :price %>
            </div>
            <div class="user-box">
              <%=  f.input :photo, as: :file  %>
            </div>
            <div class="form-actions">
              <%= f.button :submit %>
            </div>
          </form>
        </div>
  </body>
<% end %>
