
<%= simple_form_for(@studio) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <body>
    <div class="background" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1535406208535-1429839cfd13?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1510&q=80')">>
        <div class="box2">
          <div class="form-centre">
            <div class="form-inputs">
              <%= f.input :title %>
              <%= f.input :address, id: "studio_address"%>
              <%= f.input :description %>
              <%= f.input :price %>
              <%=  f.input :photo, as: :file  %>
            </div>
            <div class="form-actions">
              <%= f.button :submit %>
            </div>
            </div>
          </div>
        </div>
    </div>
  </body>
<% end %>
